{
	"manifest_version": 3,
	"name": "__MSG_extensionName__",
	"version": "1.1.0",
	"description": "__MSG_extensionDescription__",
	"default_locale": "en",
	"permissions": [
		"downloads",
		"downloads.open",
		"downloads.shelf",
		"storage",
		"activeTab",
		"contextMenus",
		"notifications",
		"tabs"
	],
	"host_permissions": ["<all_urls>"],
	"background": { "service_worker": "js/background.js" },
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/content.js"],
			"css": ["css/content.css"]
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_title": "下载管理器",
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["popup.html", "popup.js", "popup.css", "icons/*.png"],
			"matches": ["<all_urls>"]
		}
	]
}
